/* pages/result/result.wxss */

.result-page {
  min-height: 100vh;
  padding: 24rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
  background: linear-gradient(180deg, #f0f4ff 0%, #f5f7fa 50%);
}

/* ===== 成功Banner ===== */
.success-banner {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(0, 200, 83, 0.1) 0%, rgba(0, 230, 118, 0.1) 100%);
  border-radius: 16rpx;
  color: var(--success-color);
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.banner-icon {
  width: 36rpx;
  height: 36rpx;
}

/* ===== 图片展示区域 ===== */
.image-section {
  margin-bottom: 32rpx;
}

.image-container {
  position: relative;
  width: 100%;
  border-radius: 24rpx;
  overflow: hidden;
  background: #ffffff;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.15);
}

.result-image {
  width: 100%;
  min-height: 500rpx;
  max-height: 800rpx;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f7fa;
}

.loading-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  color: var(--text-muted);
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.zoom-hint {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 24rpx;
  color: #ffffff;
  font-size: 22rpx;
  backdrop-filter: blur(4px);
}

.zoom-hint image {
  width: 28rpx;
  height: 28rpx;
}

/* ===== 操作区域 ===== */
.action-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.action-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 28rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  border: none;
  text-align: left;
  line-height: inherit;
}

.action-card::after {
  border: none;
}

.action-card:active {
  transform: scale(0.99);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.action-card.locked {
  background: linear-gradient(135deg, #fffbf0 0%, #fff8e6 100%);
}

.action-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.action-icon image {
  width: 40rpx;
  height: 40rpx;
}

.save-icon {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.save-icon image {
  filter: brightness(0) invert(1);
}

.original-icon {
  background: linear-gradient(135deg, #ff9800 0%, #ffb300 100%);
}

.original-icon image {
  filter: brightness(0) invert(1);
}

.share-icon {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.share-icon image {
  filter: brightness(0) invert(1);
}

.action-content {
  flex: 1;
}

.action-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 6rpx;
}

.action-title .badge {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
}

.action-desc {
  font-size: 24rpx;
}

.action-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
}

.action-arrow image {
  width: 100%;
  height: 100%;
}

/* 分享按钮特殊处理 */
.share-btn {
  margin: 0;
  padding: 28rpx;
}

/* ===== 再次生成 ===== */
.regenerate-section {
  margin-bottom: 32rpx;
}

.regenerate-section .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.regenerate-section .btn-icon {
  width: 36rpx;
  height: 36rpx;
}

.regenerate-tips {
  text-align: center;
  margin-top: 16rpx;
}

/* ===== 底部提示 ===== */
.footer-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 24rpx;
}

.tips-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: var(--text-muted);
  font-size: 24rpx;
}

.tips-item image {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.6;
}

.tips-divider {
  color: var(--border-color);
}

/* 动画 */
@keyframes spin {
  to { transform: rotate(360deg); }
}

.animate-fadeIn {
  animation: fadeIn 0.5s ease-out forwards;
  opacity: 0;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}
