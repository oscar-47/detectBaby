/* pages/home/home.wxss */

.home-page {
  min-height: 100vh;
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
}

/* ===== Hero区域 ===== */
.hero-section {
  position: relative;
  padding: 80rpx 40rpx 60rpx;
  overflow: hidden;
}

.hero-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  transform: skewY(-3deg);
  transform-origin: top left;
}

.hero-bg::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="30" r="3" fill="rgba(255,255,255,0.08)"/><circle cx="40" cy="70" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="90" cy="80" r="2" fill="rgba(255,255,255,0.06)"/></svg>');
  background-size: 200rpx;
}

.hero-content {
  position: relative;
  z-index: 1;
  text-align: center;
}

.hero-title {
  font-size: 56rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 16rpx;
}

.hero-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 24rpx;
}

.hero-badge {
  display: flex;
  justify-content: center;
  gap: 16rpx;
}

.hero-badge .badge {
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  backdrop-filter: blur(10px);
  padding: 8rpx 24rpx;
  font-size: 24rpx;
}

/* ===== 操作区域 ===== */
.action-section {
  padding: 40rpx;
  margin-top: -30rpx;
  position: relative;
  z-index: 2;
}

.generate-btn {
  height: 110rpx;
  border-radius: 55rpx;
  font-size: 36rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.4);
}

.generate-btn:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
}

.btn-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 12rpx;
}

.action-tips {
  text-align: center;
  margin-top: 20rpx;
}

/* ===== 参考图区域 ===== */
.gallery-section {
  padding: 0 24rpx;
}

.section-header {
  padding: 24rpx 16rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.section-subtitle {
  margin-top: 8rpx;
}

/* 瀑布流布局 */
.waterfall-container {
  display: flex;
  gap: 16rpx;
}

.waterfall-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.waterfall-item {
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
  background: #ffffff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.waterfall-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.waterfall-image {
  width: 100%;
  display: block;
}

.waterfall-tags {
  position: absolute;
  left: 12rpx;
  bottom: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.waterfall-tags .tag {
  padding: 4rpx 12rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 16rpx;
  backdrop-filter: blur(4px);
}

/* 加载骨架屏 */
.skeleton-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.skeleton-card {
  width: calc(50% - 8rpx);
  height: 300rpx;
  border-radius: 20rpx;
}

.skeleton-card:nth-child(2) {
  height: 400rpx;
}

.skeleton-card:nth-child(3) {
  height: 350rpx;
}

.skeleton-card:nth-child(4) {
  height: 280rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 32rpx;
  color: var(--primary-color);
  font-size: 28rpx;
}

/* ===== 底部区域 ===== */
.footer-section {
  padding: 40rpx;
  text-align: center;
}

.footer-links {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.footer-link {
  color: var(--text-muted);
  font-size: 24rpx;
}

.footer-divider {
  color: var(--border-color);
  font-size: 20rpx;
}

.footer-notice {
  padding-top: 16rpx;
  border-top: 1rpx solid var(--border-color);
}
