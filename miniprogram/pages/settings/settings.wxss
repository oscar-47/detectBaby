/* pages/settings/settings.wxss */

.settings-page {
  min-height: 100vh;
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
  background: var(--bg-primary);
}

/* ===== 用户信息区域 ===== */
.user-section {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 48rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.user-id {
  color: rgba(255, 255, 255, 0.7);
}

/* ===== 设置组 ===== */
.settings-group {
  margin-bottom: 24rpx;
}

.group-title {
  padding: 20rpx 32rpx 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-muted);
}

.settings-list {
  background: #ffffff;
  border-radius: 20rpx;
  margin: 0 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.settings-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid var(--border-color);
  background: transparent;
  border: none;
  text-align: left;
  line-height: inherit;
  transition: background 0.2s ease;
}

.settings-item::after {
  border: none;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-item:active {
  background: var(--bg-primary);
}

.settings-item.danger .item-icon {
  background: linear-gradient(135deg, #ff5252 0%, #ff6b6b 100%);
}

.settings-item.danger .item-content text {
  color: var(--error-color);
}

.item-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  flex-shrink: 0;
}

.item-icon image {
  width: 32rpx;
  height: 32rpx;
  filter: brightness(0) invert(1);
}

.item-content {
  flex: 1;
  min-width: 0;
}

.item-content text {
  font-size: 30rpx;
  color: var(--text-primary);
}

.item-desc {
  margin-top: 6rpx;
}

.item-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
  flex-shrink: 0;
}

.item-arrow image {
  width: 100%;
  height: 100%;
}

/* ===== 版本信息 ===== */
.version-info {
  text-align: center;
  padding: 48rpx 32rpx;
}

.version-text {
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.copyright {
  line-height: 1.5;
}
