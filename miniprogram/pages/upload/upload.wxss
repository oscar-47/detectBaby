/* pages/upload/upload.wxss */

.upload-page {
  min-height: 100vh;
  padding: 24rpx;
  padding-bottom: 200rpx;
  background: var(--bg-primary);
}

/* ===== 提示卡片 ===== */
.tips-card {
  background: linear-gradient(135deg, #fff9e6 0%, #fff5d6 100%);
  border-left: 6rpx solid #ffab00;
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tips-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #b37800;
}

.tips-list {
  padding-left: 8rpx;
}

.tips-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

.tips-item:last-child {
  margin-bottom: 0;
}

.tips-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: var(--primary-color);
  margin-right: 16rpx;
  margin-top: 12rpx;
  flex-shrink: 0;
}

.tips-dot.warning {
  background: #ff5252;
}

/* ===== 上传区域 ===== */
.upload-area-container {
  margin-top: 32rpx;
}

.upload-area {
  position: relative;
  width: 100%;
  min-height: 400rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background: #ffffff;
  border: 3rpx dashed var(--border-color);
  transition: all 0.3s ease;
}

.upload-area:active {
  transform: scale(0.99);
  border-color: var(--primary-color);
}

.upload-area.has-image {
  border: none;
  box-shadow: var(--shadow-md);
}

/* 占位区域 */
.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  padding: 40rpx;
}

.upload-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.upload-icon {
  width: 60rpx;
  height: 60rpx;
}

.upload-text {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.upload-subtext {
  font-size: 26rpx;
}

/* 预览区域 */
.preview-container {
  position: relative;
  width: 100%;
  min-height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}

.preview-image {
  width: 100%;
  max-height: 600rpx;
}

.preview-overlay {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
}

.preview-actions {
  display: flex;
  justify-content: center;
  gap: 48rpx;
}

.preview-action {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #ffffff;
  font-size: 24rpx;
}

.preview-action image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  filter: brightness(0) invert(1);
}

/* ===== 示例区域 ===== */
.example-section {
  margin-top: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.example-grid {
  display: flex;
  gap: 20rpx;
}

.example-item {
  flex: 1;
  border-radius: 16rpx;
  overflow: hidden;
  background: #ffffff;
  box-shadow: var(--shadow-sm);
}

.example-image {
  width: 100%;
  height: 200rpx;
}

.example-badge {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  font-size: 22rpx;
  gap: 8rpx;
}

.example-badge image {
  width: 28rpx;
  height: 28rpx;
}

.example-badge.success {
  background: rgba(0, 200, 83, 0.1);
  color: var(--success-color);
}

.example-badge.error {
  background: rgba(255, 82, 82, 0.1);
  color: var(--error-color);
}

/* ===== 底部操作 ===== */
.bottom-action {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.btn-content.loading .loading-spinner {
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #ffffff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}
