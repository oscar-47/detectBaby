/* pages/history/history.wxss */

.history-page {
  min-height: 100vh;
  padding: 24rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
  background: var(--bg-primary);
}

/* ===== 页面头部 ===== */
.page-header {
  padding: 24rpx 16rpx 32rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 26rpx;
}

/* ===== 历史列表 ===== */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.history-item:active {
  transform: scale(0.99);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.item-image {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.thumbnail {
  width: 100%;
  height: 100%;
  background: var(--border-color);
}

.status-badge {
  position: absolute;
  left: 8rpx;
  bottom: 8rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  backdrop-filter: blur(4px);
}

.status-badge.succeeded {
  background: rgba(0, 200, 83, 0.9);
  color: #ffffff;
}

.status-badge.generating {
  background: rgba(102, 126, 234, 0.9);
  color: #ffffff;
}

.status-badge.failed {
  background: rgba(255, 82, 82, 0.9);
  color: #ffffff;
}

.item-content {
  flex: 1;
  min-width: 0;
}

.item-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.item-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: var(--text-muted);
}

.meta-item image {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.6;
}

.item-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
}

.item-arrow image {
  width: 100%;
  height: 100%;
}

/* ===== 加载骨架 ===== */
.loading-state {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.skeleton-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
}

.skeleton-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
}

.skeleton-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.skeleton-title {
  width: 60%;
  height: 32rpx;
}

.skeleton-meta {
  width: 40%;
  height: 24rpx;
}

/* ===== 空状态 ===== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon-wrapper {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-icon {
  width: 100%;
  height: 100%;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.empty-state .btn {
  min-width: 280rpx;
}

/* ===== 底部提示 ===== */
.footer-tips {
  text-align: center;
  padding: 32rpx;
}

/* 动画 */
.animate-fadeIn {
  animation: fadeIn 0.4s ease-out forwards;
  opacity: 0;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(16rpx); }
  to { opacity: 1; transform: translateY(0); }
}
