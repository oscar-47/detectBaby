/* pages/job/job.wxss */

.job-page {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background: linear-gradient(180deg, #f8f9ff 0%, #f5f7fa 100%);
}

.job-content {
  width: 100%;
  text-align: center;
}

/* ===== 生成动画 ===== */
.generate-animation {
  position: relative;
  height: 320rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
}

.baby-container {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.glow-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 4rpx solid transparent;
  border-top-color: #667eea;
  border-right-color: #764ba2;
  transform: translate(-50%, -50%);
  animation: rotate 2s linear infinite;
}

.glow-ring.delay {
  width: 240rpx;
  height: 240rpx;
  border-top-color: #f093fb;
  border-right-color: #667eea;
  animation: rotate 3s linear infinite reverse;
  opacity: 0.6;
}

@keyframes rotate {
  from { transform: translate(-50%, -50%) rotate(0deg); }
  to { transform: translate(-50%, -50%) rotate(360deg); }
}

.baby-icon-wrapper {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 40rpx rgba(102, 126, 234, 0.4);
  animation: pulse 2s ease-in-out infinite;
}

.baby-icon {
  width: 60rpx;
  height: 60rpx;
  filter: brightness(0) invert(1);
}

/* 魔法粒子 */
.magic-particles {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.particle {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea, #f093fb);
  animation: particle 3s ease-in-out infinite;
  animation-delay: calc(var(--i) * 0.2s);
}

@keyframes particle {
  0%, 100% {
    transform: rotate(calc(var(--i) * 45deg)) translateX(100rpx) scale(0);
    opacity: 0;
  }
  50% {
    transform: rotate(calc(var(--i) * 45deg)) translateX(160rpx) scale(1);
    opacity: 1;
  }
}

/* ===== 生成信息 ===== */
.generate-info {
  margin-bottom: 48rpx;
}

.generate-title {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.generate-subtitle {
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

/* 进度条 */
.progress-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 0 40rpx;
  margin-bottom: 40rpx;
}

.progress-bar {
  flex: 1;
  height: 16rpx;
  background: rgba(102, 126, 234, 0.15);
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2, #f093fb);
  border-radius: 8rpx;
  transition: width 0.5s ease;
  background-size: 200% 100%;
  animation: shimmer 2s linear infinite;
}

@keyframes shimmer {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

.progress-text {
  width: 80rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-color);
}

/* 状态步骤 */
.status-steps {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}

.status-step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  opacity: 0.4;
  transition: all 0.3s ease;
}

.status-step.active {
  opacity: 1;
}

.status-step.done {
  opacity: 1;
}

.status-step.done .step-indicator {
  background: var(--success-color);
  color: #ffffff;
}

.step-indicator {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: var(--border-color);
  color: var(--text-muted);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.status-step.active .step-indicator {
  background: var(--primary-color);
  color: #ffffff;
  animation: pulse 1s ease-in-out infinite;
}

.status-step text {
  font-size: 22rpx;
  color: var(--text-muted);
}

.status-step.active text {
  color: var(--primary-color);
}

/* 提示卡片 */
.tips-card {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx;
  background: rgba(102, 126, 234, 0.08);
  border-radius: 16rpx;
}

.tips-icon {
  font-size: 32rpx;
}

.tips-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* ===== 成功状态 ===== */
.success-animation {
  margin-bottom: 32rpx;
}

.success-icon-wrapper {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(0, 200, 83, 0.15) 0%, rgba(0, 230, 118, 0.15) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  animation: scaleIn 0.5s ease-out;
}

@keyframes scaleIn {
  from { transform: scale(0); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.success-icon {
  width: 80rpx;
  height: 80rpx;
}

.success-title {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--success-color);
  margin-bottom: 12rpx;
}

.success-subtitle {
  font-size: 28rpx;
}

/* ===== 失败状态 ===== */
.fail-icon-wrapper {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 32rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255, 82, 82, 0.15) 0%, rgba(255, 107, 107, 0.15) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.fail-icon {
  width: 80rpx;
  height: 80rpx;
}

.fail-title {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--error-color);
  margin-bottom: 12rpx;
}

.fail-subtitle {
  font-size: 28rpx;
  margin-bottom: 48rpx;
}

.fail-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
