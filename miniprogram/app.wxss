/* app.wxss - 全局样式 */

/* ===== CSS变量定义 ===== */
page {
  --primary-color: #667eea;
  --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --secondary-color: #f093fb;
  --accent-color: #4facfe;
  --success-color: #00c853;
  --warning-color: #ffab00;
  --error-color: #ff5252;
  
  --text-primary: #1a1a2e;
  --text-secondary: #4a4a68;
  --text-muted: #8e8ea9;
  --text-white: #ffffff;
  
  --bg-primary: #f5f7fa;
  --bg-secondary: #ffffff;
  --bg-card: #ffffff;
  --bg-overlay: rgba(0, 0, 0, 0.5);
  
  --border-color: #e8e8ef;
  --shadow-sm: 0 2px 8px rgba(102, 126, 234, 0.1);
  --shadow-md: 0 4px 20px rgba(102, 126, 234, 0.15);
  --shadow-lg: 0 8px 40px rgba(102, 126, 234, 0.2);
  
  --radius-sm: 8rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  --radius-full: 9999rpx;
  
  --font-xs: 22rpx;
  --font-sm: 24rpx;
  --font-base: 28rpx;
  --font-md: 32rpx;
  --font-lg: 36rpx;
  --font-xl: 44rpx;
  --font-2xl: 56rpx;
  
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  
  background-color: var(--bg-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: var(--font-base);
  color: var(--text-primary);
  line-height: 1.6;
}

/* ===== 通用容器 ===== */
.container {
  min-height: 100vh;
  padding: var(--spacing-lg);
  box-sizing: border-box;
}

.page-wrapper {
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
}

/* ===== 卡片样式 ===== */
.card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
}

.card-elevated {
  box-shadow: var(--shadow-md);
}

/* ===== 渐变背景 ===== */
.gradient-bg {
  background: var(--primary-gradient);
}

.gradient-text {
  background: var(--primary-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* ===== 按钮样式 ===== */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-md) var(--spacing-xl);
  border-radius: var(--radius-full);
  font-size: var(--font-md);
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
  outline: none;
}

.btn::after {
  border: none;
}

.btn-primary {
  background: var(--primary-gradient);
  color: var(--text-white);
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2px 10px rgba(102, 126, 234, 0.3);
}

.btn-secondary {
  background: var(--bg-secondary);
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.btn-secondary:active {
  background: rgba(102, 126, 234, 0.1);
}

.btn-success {
  background: linear-gradient(135deg, #00c853 0%, #00e676 100%);
  color: var(--text-white);
  box-shadow: 0 4px 15px rgba(0, 200, 83, 0.4);
}

.btn-warning {
  background: linear-gradient(135deg, #ff9800 0%, #ffb300 100%);
  color: var(--text-white);
  box-shadow: 0 4px 15px rgba(255, 152, 0, 0.4);
}

.btn-lg {
  padding: var(--spacing-lg) var(--spacing-xl);
  font-size: var(--font-lg);
  min-height: 100rpx;
}

.btn-block {
  width: 100%;
}

.btn-disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* ===== 文字样式 ===== */
.text-center {
  text-align: center;
}

.text-primary {
  color: var(--primary-color);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-muted {
  color: var(--text-muted);
}

.text-success {
  color: var(--success-color);
}

.text-warning {
  color: var(--warning-color);
}

.text-error {
  color: var(--error-color);
}

.text-bold {
  font-weight: 600;
}

.font-xs { font-size: var(--font-xs); }
.font-sm { font-size: var(--font-sm); }
.font-base { font-size: var(--font-base); }
.font-md { font-size: var(--font-md); }
.font-lg { font-size: var(--font-lg); }
.font-xl { font-size: var(--font-xl); }
.font-2xl { font-size: var(--font-2xl); }

/* ===== Flex布局 ===== */
.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-start {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.flex-1 {
  flex: 1;
}

/* ===== 间距 ===== */
.mt-xs { margin-top: var(--spacing-xs); }
.mt-sm { margin-top: var(--spacing-sm); }
.mt-md { margin-top: var(--spacing-md); }
.mt-lg { margin-top: var(--spacing-lg); }
.mt-xl { margin-top: var(--spacing-xl); }

.mb-xs { margin-bottom: var(--spacing-xs); }
.mb-sm { margin-bottom: var(--spacing-sm); }
.mb-md { margin-bottom: var(--spacing-md); }
.mb-lg { margin-bottom: var(--spacing-lg); }
.mb-xl { margin-bottom: var(--spacing-xl); }

.p-xs { padding: var(--spacing-xs); }
.p-sm { padding: var(--spacing-sm); }
.p-md { padding: var(--spacing-md); }
.p-lg { padding: var(--spacing-lg); }
.p-xl { padding: var(--spacing-xl); }

/* ===== 动画 ===== */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes shimmer {
  0% { background-position: -1000rpx 0; }
  100% { background-position: 1000rpx 0; }
}

.animate-fadeIn {
  animation: fadeIn 0.5s ease-out;
}

.animate-pulse {
  animation: pulse 2s ease-in-out infinite;
}

.animate-spin {
  animation: spin 1s linear infinite;
}

/* ===== 加载骨架屏 ===== */
.skeleton {
  background: linear-gradient(
    90deg,
    var(--border-color) 25%,
    #f0f0f5 50%,
    var(--border-color) 75%
  );
  background-size: 1000rpx 100%;
  animation: shimmer 2s infinite linear;
  border-radius: var(--radius-md);
}

/* ===== 分割线 ===== */
.divider {
  height: 1rpx;
  background: var(--border-color);
  margin: var(--spacing-lg) 0;
}

/* ===== 徽章 ===== */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 4rpx 16rpx;
  border-radius: var(--radius-full);
  font-size: var(--font-xs);
  font-weight: 500;
}

.badge-primary {
  background: rgba(102, 126, 234, 0.15);
  color: var(--primary-color);
}

.badge-success {
  background: rgba(0, 200, 83, 0.15);
  color: var(--success-color);
}

.badge-warning {
  background: rgba(255, 171, 0, 0.15);
  color: var(--warning-color);
}

.badge-error {
  background: rgba(255, 82, 82, 0.15);
  color: var(--error-color);
}

/* ===== 空状态 ===== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
  text-align: center;
}

.empty-state-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: var(--spacing-lg);
  opacity: 0.6;
}

.empty-state-text {
  color: var(--text-muted);
  font-size: var(--font-md);
}

/* ===== 价格标签 ===== */
.price {
  font-weight: 700;
  color: var(--error-color);
}

.price-currency {
  font-size: var(--font-sm);
}

.price-value {
  font-size: var(--font-xl);
}

/* ===== 列表项 ===== */
.list-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-lg);
  background: var(--bg-card);
  border-bottom: 1rpx solid var(--border-color);
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: var(--spacing-md);
}

.list-item-content {
  flex: 1;
}

.list-item-arrow {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.4;
}
